# MCP Server Environment Variables Template
# Copy this file to .env and fill in your actual credentials
# IMPORTANT: Never commit .env to git (it's in .gitignore)

# ============================================
# GITHUB MCP SERVER
# ============================================
# Create a GitHub Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user
GITHUB_TOKEN=ghp_your_github_token_here

# ============================================
# DATABASE MCP SERVERS
# ============================================
# PostgreSQL connection string format:
# postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/happy_place_db

# SQLite database path (relative to project root)
SQLITE_DATABASE_PATH=./backend/database.db

# ============================================
# PAYMENT INTEGRATION (Future Phase 3)
# ============================================
# Stripe API keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_API_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# IMAGE SERVICES (Future Enhancement)
# ============================================
# Unsplash API (get from https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_SECRET_KEY=your_unsplash_secret_key

# ============================================
# FLASK BACKEND (Existing)
# ============================================
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
FLASK_ENV=development
FLASK_APP=backend/app.py

# ============================================
# FILE SYSTEM PATHS
# ============================================
ALLOWED_PATHS=/Users/xreatives/Documents/Code/cli_projects/happy_place_webstore
